#include <iostream>
using namespace std;

class Number {
    int value;
public:
    Number(int v = 0) : value(v) {}
    friend Number operator-(Number n);
    void display() {
        cout << value;
    }
};

Number operator-(Number n) {
    return Number(-n.value);
}

int main() {
    Number n1(10);
    Number n2 = -n1;
    n2.display();
    return 0;
}
