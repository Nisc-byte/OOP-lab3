#include <iostream>
using namespace std;

class Time {
    int hours, minutes, seconds;
public:
    Time(int h = 0, int m = 0, int s = 0) {
        hours = h;
        minutes = m;
        seconds = s;
    }
    friend Time operator+(const Time& t1, const Time& t2);
    void display() {
        cout << (hours < 10 ? "0" : "") << hours << ":"
             << (minutes < 10 ? "0" : "") << minutes << ":"
             << (seconds < 10 ? "0" : "") << seconds << endl;
    }
};

Time operator+(const Time& t1, const Time& t2) {
    Time temp;
    temp.seconds = t1.seconds + t2.seconds;
    temp.minutes = t1.minutes + t2.minutes + temp.seconds / 60;
    temp.seconds %= 60;
    temp.hours = t1.hours + t2.hours + temp.minutes / 60;
    temp.minutes %= 60;
    temp.hours %= 24; // Optional: keeps time in 24-hour format
    return temp;
}

int main() {
    int h1, m1, s1, h2, m2, s2;
    cout << "Enter first time (HH MM SS): ";
    cin >> h1 >> m1 >> s1;
    cout << "Enter second time (HH MM SS): ";
    cin >> h2 >> m2 >> s2;

    Time t1(h1, m1, s1), t2(h2, m2, s2);
    Time t3 = t1 + t2;

    cout << "Sum of time periods: ";
    t3.display();
    return 0;
}
